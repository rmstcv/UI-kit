include ../fields/fields.pug

.fields-wrapper 
  .field-wrapper
    p(class="field-wrapper__text") DEFAULT
    +field-default({
      fieldName: "TEXT FIELD", 
      type: "email", 
      placeholder: "Email"
    })
  .field-wrapper
    .field-wrapper_input-focused
      p(class="field-wrapper__text") HOVER / FOCUS
      +field-default({
        fieldName: "TEXT FIELD", 
        type: "text", 
        placeholder: "This is pretty awesome"
      })

  .field-wrapper
    p(class="field-wrapper__text") DEFAULT
    +field-default({
      fieldName: "DROPDOWN", 
      type: "text", 
      placeholder: "Сколько гостей",
      dropdown: true
    })
  .field-wrapper
    +field-default({
      fieldName: "MASKED TEXT FIELD", 
      type: "text", 
      placeholder: "ДД.ММ.ГГГГ",
    })

  .dropdown-wrapper
    .date-dropdown-wrapper  
      +field-default({
        fieldName: "DATE DROPDOWN", 
        type: "text", 
        placeholder: "ДД.ММ.ГГГГ",
        isSmall: true,
        dropdown: true,
        date: true
    })
    
      +field-default({
        fieldName: "DATE DROPDOWN", 
        type: "text", 
        placeholder: "19.08.2019",
        isSmall: true,
        dropdown: true,
        date: true
    })

    +field-default({
        fieldName: "FILTER DATE DROPDOWN", 
        type: "text", 
        placeholder: "19 авг - 23 авг",
        dropdown: true,
        isMedium: true,
        date: true
    })

    +field-default({
        fieldName: "SUBSCRIPTION TEXT FIELD", 
        type: "email", 
        placeholder: "Email",
        subscr: true,
        isMedium: true
    })