include ../fields/fields.pug
include ../dropdown/dropdown.pug
include ../dropdown-date/dropdown-date.pug

.fields-wrapper 
  .field-wrapper
    p(class="field-wrapper__text") DEFAULT
    +field-default({
      fieldName: "TEXT FIELD", 
      type: "email", 
      placeholder: "Email"
    })

  .field-wrapper
    .field-wrapper_input-focused
      p(class="field-wrapper__text") HOVER / FOCUS
      +field-default({
        fieldName: "TEXT FIELD", 
        type: "text", 
        value: "This is pretty awesome"
      })
      
  .field-wrapper
    p(class="field-wrapper__text") DEFAULT
    +dropdown({
        fieldName: "DROPDOWN",
        dropdownName: "guests",
        defaultContent: "Сколько гостей"
      })

  .field-wrapper
    +field-default({
      fieldName: "MASKED TEXT FIELD", 
      type: "text", 
      placeholder: "ДД.ММ.ГГГГ",
    })

  .dropdown-wrapper
    .date-dropdown-wrapper  
    .field-wrapper.field-wrapper_dropdown
      +dropdown-date({
        fieldName: "DATE DROPDOWN",
        fieldNameDouble: "DATE DROPDOWN",
        type: "text", 
        placeholder: "ДД.ММ.ГГГГ",
        dateOut: "2019, 8, 19",
        isSmall: true,
        isDouble: true
      })
      .field-wrapper.field-wrapper_dropdown
        +dropdown-date({
          fieldName: "FILTER DATE DROPDOWN", 
          type: "text", 
          dateIn: "2019, 8, 19",
          dateOut: "2019, 8, 23",
          isMedium: true
        })
    .field-wrapper.field-wrapper_dropdown
      +field-default({
          fieldName: "SUBSCRIPTION TEXT FIELD", 
          type: "email", 
          placeholder: "Email",
          subscr: true,
          isMedium: true
        })