//- include ../date-picker/date-picker.pug
include ../date-picker/date-picker.pug
mixin dropdown-date (options)
  - 
    var fieldLength = ""
    fieldLength += options.isSmall ? "dropdown-date__input_small" :
    options.isMedium ? "dropdown-date__input_medium" :
    options.isLarge ? "dropdown-date__input_large" :
    "dropdown-date__input_medium"

    var pickerType = ""
    pickerType += !options.isDouble ? "dropdown-date__date-picker-double" : "dropdown-date__date-picker-single"
  div(class="dropdown-date")
    p(class="dropdown-date__text")= options.fieldName
      if options.isDouble
        .dropdown-date__double-wrapper
          .dropdown-date__double
            .dropdown-date__check-wrapper
              .dropdown-date__check-mark
            input(class=`dropdown-date__input dropdown-date__input-check-in ${fieldLength}` type="text" placeholder= options.placeholder value="" disabled)
          .dropdown-date__double
            .dropdown-date__check-wrapper
              .dropdown-date__check-mark
            input(class=`dropdown-date__input dropdown-date__input-check-out ${fieldLength}` type="text" placeholder= options.placeholder value="" disabled)
        div(class=` ${pickerType}`)
          +addAirDatePicker({
            dateIn: options.dateIn,
            dateOut: options.dateOut,
          })
      else 
        .dropdown-date__double
          .dropdown-date__check-wrapper
            .dropdown-date__check-mark
          input(class=`dropdown-date__input dropdown-date__input-check ${fieldLength}` type="text" placeholder= options.placeholder value="" disabled)
        div(class=`${pickerType}`)
          +addAirDatePicker({
            dateIn: options.dateIn,
            dateOut: options.dateOut,
          })