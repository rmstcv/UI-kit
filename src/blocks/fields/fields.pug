mixin field-default(options)
  - 
    var fieldLength = ""
    fieldLength += options.isSmall ? "field-default_small" :
      options.isMedium ? "field-default_medium" :
      options.isLarge? "field-default_large" : ""

  div(class = `field-default ${fieldLength}`)
    .field-default__text-wrapper
      p(class="field-default__text")= options.fieldName

    if options.subscr 
      .field-default__check-wrapper
       .field-default__check-mark.field-default__check-mark_subscr

    input(class=`field-default__input ${fieldClassName}` type= options.type placeholder= options.placeholder value= options.value)